<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Splash Screen Styles -->
    <style name="AppTheme.SplashScreen" parent="android:Theme.Material.NoActionBar">
        <item name="colorPrimary">@color/SplashScreenColor</item>
        <item name="colorPrimaryDark">@color/SplashScreenColor</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:statusBarColor">@color/SplashScreenColor</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/SplashScreenColor</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
    </style>

    <!-- Login Screen Styles -->
    <style name="AppTheme.LoginScreen" parent="android:Theme.Material.NoActionBar">
        <item name="colorPrimary">@color/PrimaryColor</item>
        <item name="colorPrimaryDark">@color/PrimaryColorDark</item>
        <item name="colorAccent">@color/PrimaryColorAcent</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
        <item name="android:textColor">@color/SecondaryColor</item>
    </style>

    <style name="AppTheme.LoginScreen.EditText" parent="android:Widget.Material.EditText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/login_screen_edit_text</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
        <item name="android:textColorHint">@color/grey_400</item>
        <item name="android:autofilledHighlight">@color/white</item>
    </style>

    <style name="AppTheme.LoginScreen.TextView.Title" parent="android:Widget.Material.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="android:textColor">@color/grey_800</item>
    </style>

    <style name="AppTheme.LoginScreen.TextView.SubTitle" parent="android:Widget.Material.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="android:textColor">@color/grey_600</item>
    </style>

    <style name="AppTheme.LoginScreen.Button.Primary" parent="android:Widget.Material.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/login_screen_button_primary</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

</resources>