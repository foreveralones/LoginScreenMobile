<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.XSTI.LoginScreenMobile">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LoginScreenMobile">

        <!-- Splash screen -->
        <activity
            android:name=".XSTI.SplashScreen.SplashActivity"
            android:theme="@style/AppTheme.SplashScreen"
            android:configChanges="uiMode">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Screen -->
        <activity
            android:name="com.XSTI.LoginScreenMobile.XSTI.LoginScreen.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.LoginScreen">
        </activity>

        <!-- Activity Principal -->
        <activity
            android:name="com.XSTI.LoginScreenMobile.MainActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>